{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(renovate)",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    ":rebaseStalePrs",
    ":disableDependencyDashboard",
    ":automergePatch",
    ":automergeDigest",
    "schedule:weekends"
  ],
  "platformAutomerge": true,
  "baseBranches": [
    "main"
  ],
  "rangeStrategy": "auto",
  "digest": {
    "addLabels": [
      "digest"
    ]
  },
  "pin": {
    "addLabels": [
      "pin"
    ]
  },
  "patch": {
    "addLabels": [
      "patch"
    ]
  },
  "minor": {
    "addLabels": [
      "minor"
    ]
  },
  "major": {
    "addLabels": [
      "major"
    ]
  },
  "packageRules": [
    {
      "groupName": "github-actions",
      "addLabels": [
        "github-actions"
      ],
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "addLabels": [
        "python"
      ],
      "matchDatasources": [
        "pypi"
      ]
    },
    {
      "addLabels": [
        "docker"
      ],
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "customManagers": [
    {
      "fileMatch": [
        "^nginx-sandbox/values.yaml$"
      ],
      "matchStrings": [
        "repository: (?<depName>.*)\\s+tag: \"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "^nginx-sandbox/files/usr/local/app/requirements.txt$"
      ],
      "matchStrings": [
        "(?<depName>.*)==(?<currentValue>.*)"
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "python"
    }
  ]
}
