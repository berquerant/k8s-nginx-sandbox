{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>berquerant/renovate-config"
  ],
  "ignorePaths": [
    "tests/**"
  ],
  "github-actions": {
    "enabled": false
  },
  "platformAutomerge": false,
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "addLabels": [
        "python"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "pypi"
    },
    {
      "addLabels": [
        "docker"
      ],
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Manage python dependencies",
      "fileMatch": [
        "^charts/nginx-sandbox/values.yaml$"
      ],
      "matchStrings": [
        "      (?<depName>.*)==(?<currentValue>.*)"
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "python"
    }
  ]
}
